PERSISTENT MODES
	(F,F) IS NONDET
	(B,F) IS NONDET
	(F,B) IS NONDET
END
pasteSnippet("extends(?RefType1,?RefType2)", "?RefType1 extends ?RefType2").

	
implements :: RefType, RefType
PERSISTENT MODES
	(F,F) IS NONDET
	(B,F) IS NONDET
	(F,B) IS NONDET
