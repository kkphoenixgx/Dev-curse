////////////////////////////////////////////////////////////////
//outerType : A top-level type declared inside of a compilation unit.  
////////////////////////////////////////////////////////////////
outerType :: Object
MODES
	(F) IS NONDET
END

outerType(?Type) :- type(?Type), child(?CU,?Type), cu(?CU).  

   